{
	"$schema": "../../../A2v10.ProcS/@schemas/statemachine-schema.json",
	"Description": "ChatBotExample",
	"InitialState": "Init",
	"States": {
		"Init": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:WaitMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}"
			},
			"Transitions": {
				"Init->AskName": {
					"Condition": "reply.Message.Text == '/start'",
					"To": "AskName"
				},
				"Init->Init": {
					"To": "Init"
				}
			}
		},
		"AskName": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:SendMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}",
				"Message": {
					"Type": "Text",
					"Text": "Кто здесь?"
				}
			},
			"NextState": "WaitForName"
		},
		"WaitForName": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:WaitMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}"
			},
			"OnExit": {
				"$res": "com.a2v10.procs:CodeActivity",
				"Code": "data.name = reply.Message.Text"
			},
			"Transitions": {
				"WaitForName->Hello": {
					"To": "Hello"
				}
			}
		},
		"Hello": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:SendMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}",
				"Message": {
					"Type": "Text",
					"Text": "Превед, {{data.name}}!"
				}
			},
			"NextState": "HelloFather"
		},
		"HelloFather": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:SendMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "0c3af6d2-0000-0000-d2f6-3a0c00000000",
				"Message": {
					"Type": "Text",
					"Text": "There is {{data.name}}"
				}
			},
			"NextState": "Dialog"
		},
		"Dialog": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:WaitMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}"
			},
			"OnExit": {
				"$res": "com.a2v10.procs:CodeActivity",
				"Code": "data.said = reply.Message.Text"
			},
			"Transitions": {
				"Dialog->AskName": {
					"Condition": "reply.Message.Text == '/start'",
					"To": "AskName"
				},
				"Dialog->SayFather": {
					"To": "SayFather"
				}
			}
		},
		"SayFather": {
			"OnEntry": {
				"$res": "com.a2.procs.chatbot:SendMessageActivity",
				"BotEngine": "Mocking",
				"BotKey": "TestBot",
				"ChatId": "0c3af6d2-0000-0000-d2f6-3a0c00000000",
				"Message": {
					"Type": "Text",
					"Text": "{{data.name}}: {{data.said}}"
				}
			},
			"NextState": "Dialog"
		}
	}
}