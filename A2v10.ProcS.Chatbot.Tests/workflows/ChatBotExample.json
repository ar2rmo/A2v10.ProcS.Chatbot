{
	"$schema": "../../../A2v10.ProcS/@schemas/statemachine-schema.json",
	"Description": "ChatBotExample",
	"InitialState": "WaitForMessage",
	"States": {
		"WaitForMessage": {
			"OnEntry": {
				"$type": "A2v10.ProcS.Chatbot.WaitMessage, A2v10.ProcS.Chatbot",
				"BotEngine": "Telegram",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}"
			},
			"Transitions": {
				"WaitForMessage->Hello": {
					"Description": "From WaitForMessage to Hello",
					"To": "Hello"
				}
			}
		},
		"Hello": {
			"OnEntry": {
				"$type": "A2v10.ProcS.Chatbot.SendMessage, A2v10.ProcS.Chatbot",
				"BotEngine": "Telegram",
				"BotKey": "TestBot",
				"ChatId": "{{params.ChatId}}",
				"Message": {
					"Type": "Text",
					"Text": "Preved!"
				}
			},
			"NextState": "WaitForMessage"
		}
	}
}